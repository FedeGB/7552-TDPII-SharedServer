language: node_js
node_js:
  - "5.1.0"
addons:
  postgresql: "9.4"
before_script:
  - psql -U postgres -d postgres -a -f ./PostgreSQL/createUser.sql
  - export PGPASSWORD="admin"
  - psql -U sharedserver_user -d postgres -a -f ./PostgreSQL/tables.sql
  - psql -U sharedserver_user -d postgres
script: "npm run-script coverage"
